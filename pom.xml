  <groupId>fortyrunner</groupId>
  <artifactId>master-pom</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Master POM file</name>
  <packaging>pom</packaging>

  <description>Master POM file for all fortyrunner projects</description>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven-compiler-plugin.source>1.8</maven-compiler-plugin.source>
    <maven-compiler-plugin.target>1.8</maven-compiler-plugin.target>

    <apache-camel.version>2.17.0</apache-camel.version>
    <apache-activemq.version>5.13.2</apache-activemq.version>

    <dropwizard.version>0.9.2</dropwizard.version>
    <spring-framework.version>4.2.5.RELEASE</spring-framework.version>
    <spring-batch.version>3.0.6.RELEASE</spring-batch.version>
    <spring-data-hadoop.version>2.3.0.RELEASE</spring-data-hadoop.version>
    <spring-data.neo4j.version>3.4.4.RELEASE</spring-data.neo4j.version>
    <spring-boot.version>1.3.3.RELEASE</spring-boot.version>

    <guava.version>19.0</guava.version>
    <joda-time.version>2.9.2</joda-time.version>
    <jxl.version>2.6.12</jxl.version>
    <blizt4j.version>1.23</blizt4j.version>
    <jstl.version>1.2</jstl.version>

    <neo4j.version>2.3.2</neo4j.version>
    <hazelcast.version>3.6.1</hazelcast.version>
    <postgresql.version>9.4.1208</postgresql.version>
    <derby.version>10.12.1.1</derby.version>

    <hawtio.version>1.4.63</hawtio.version>
    <jolokia.version>1.3.3</jolokia.version>
    <slf4j-api.version>1.7.19</slf4j-api.version>
    <log4j.version>2.5</log4j.version>

    <mockito.version>1.10.19</mockito.version>
    <junit.version>4.11</junit.version>
    <esper.version>5.3.0</esper.version>

    <ignite.version>1.5.0.final</ignite.version>
  </properties>


  <dependencies>

    <dependency>
      <groupId>org.apache.ignite</groupId>
      <artifactId>ignite-core</artifactId>
      <version>${ignite.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.ignite</groupId>
